<mvc:View
  controllerName="sapui.demo.walkthrough.js.controller.InvoiceList"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <List
    id="invoiceList"
    class="sapUiResponsiveMargin"
    width="auto"
    items="{
      path: 'invoice>/Invoices',
      sorter: [{path: 'ShipperName', group: true}, {path: 'ProductName'}]
    }">
    <headerToolbar>
      <Toolbar>
        <Title text="{i18n>invoiceListTitle}"/>
        <ToolbarSpacer/>
        <SearchField width="50%" liveChange=".onFilterInvoices"/>
      </Toolbar>
    </headerToolbar>
    <items>
      <ObjectListItem
        title="{invoice>Quantity} x {invoice>ProductName}"
        number="{
          parts: [{path: 'invoice>ExtendedPrice'}, {path: 'view>/currency'}],
          type: 'sap.ui.model.type.Currency',
          formatOptions: { 
            showMeasure: false,
            decimalSeparator: '.',
            groupingSeparator: ','
          }
        }"
        icon="{= ${invoice>ExtendedPrice} > ${view>/threshold/max} ? 'sap-icon://warning2' : 'sap-icon://complete' }"
        numberUnit="{view>/currency}"
        numberState="{
          parts: [
            {path: 'invoice>ExtendedPrice'}
          ],
          formatter: '.formatter.getState'
        }">
        <firstStatus>
          <ObjectStatus
            text="{path: 'invoice>Status', formatter: '.formatter.statusText'}"/>
        </firstStatus>
      </ObjectListItem>
    </items>
  </List>
</mvc:View>