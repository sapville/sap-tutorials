<mvc:View
  controllerName="tutorial.dataBinding.controller.App"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:mvc="sap.ui.core.mvc">
  <Shell>
    <App
      id="app">
      <Page>
        <Panel 
          headerText="{/panelHeaderText}" 
          class="sapUiResponsiveMargin" 
          width="auto">
          <Text
            text="Hi, I am {/firstName} {/lastName}"/>
          <form:SimpleForm editable="true" layout="ColumnLayout">
            <Label text="First Name"/>
            <Input value="{/firstName}" valueLiveUpdate="true" width="200px" enabled="{/enabled}"/>
            <Label text="Last Name"/>
            <Input value="{path: '/lastName', mode: 'sap.ui.model.BindingMode.OneWay'}" valueLiveUpdate="true" width="200px" enabled="{/enabled}"/>
            <Label text="Enabled"/>
            <CheckBox selected="{/enabled}"/>
          </form:SimpleForm>
        </Panel>
      </Page>
    </App>
  </Shell>
</mvc:View>