<mvc:View
  controllerName="tutorial.dataBinding.controller.App"
  xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc">
    <Panel 
      headerText="{i18n>panel1HeaderText}" 
      class="sapUiResponsiveMargin" 
      width="auto">
      <Text
        text="Hi, I am {justModel>/firstName} {justModel>/lastName}"/>
      <form:SimpleForm editable="true" layout="ColumnLayout">
        <Label 
          text="{i18n>firstName}" 
          labelFor="fName"/>
        <Input 
          id="fName" 
          value="{justModel>/firstName}" 
          valueLiveUpdate="true" 
          width="200px" 
          enabled="{justModel>/enabled}"/>
        <Label 
          text="{i18n>lastName}" 
          labelFor="lName"/>
        <Input 
          id="lName" 
          value="{
            path: 'justModel>/lastName', 
            mode: 'sap.ui.model.BindingMode.OneWay'
          }" 
          valueLiveUpdate="true" 
          width="200px" 
          enabled="{justModel>/enabled}"/>
        <Label 
          text="{i18n>enabled}" 
          labelFor="enabled"/>
        <CheckBox 
          id="enabled" 
          selected="{justModel>/enabled}"/>
      </form:SimpleForm>
    </Panel>
    <Panel
      headerText="{i18n>panel2HeaderText}"
      class="sapUiResponsiveMargin" 
      width="auto">
      <content>
        <l:VerticalLayout>
          <Label
            text="{i18n>address}:"
            labelFor="address"/>
          <FormattedText
            id="address"
            class="sapUiResponsiveMarginBottom"
            width="200px"
            htmlText="
              {justModel>/address/street}&lt;br&gt;
              {justModel>/address/zip} {justModel>/address/city}&lt;br&gt;
              {justModel>/address/country}"/>
          <Link
            href="{
              parts: ['justModel>/firstName', 'justModel>/lastName'],
              formatter: '.formatMail'
            }"
            text="{i18n>sendEmail}"/>
        </l:VerticalLayout>
        <l:VerticalLayout>
          <Label
            labelFor="salesAmount"
            text="{i18n>salesAmount}:"/>
          <Input
            id="salesAmount"
            enabled="{justModel>/enabled}"
            width="200px"
            description="{justModel>/currencyCode}"
            value="{
              parts: [
                {path: 'justModel>/salesAmount'},
                {path: 'justModel>/currencyCode'}
              ],
              type: 'sap.ui.model.type.Currency',
              formatOptions: {showMeasure: false}
            }"/>
        </l:VerticalLayout>
      </content>
    </Panel>
    <Panel
      headerText="{i18n>panel3HeaderText}"
      class="sapUiResponsiveMargin"
      width="auto">
      <List
        headerText="{i18n>productListTitle}"
        items="{productModel>/Products}">
        <ObjectListItem
          press=".onItemSelected"
          type="Active"
          title="{productModel>ProductName}"
          number="{
            parts: [
              {path: 'productModel>UnitPrice'},
              {path: 'justModel>/currencyCode'}
            ],
            type: 'sap.ui.model.type.Currency',
            formatOptions: {showMeasure: false}
          }"
          numberUnit="{justModel>/currencyCode}">
          <attributes>
            <ObjectAttribute
              text="{productModel>QuantityPerUnit}"/>
            <ObjectAttribute
              title="{i18n>stockValue}"
              text="{
                parts: [
                  {path: 'productModel>UnitPrice'},
                  {path: 'productModel>UnitsInStock'},
                  {path: 'justModel>/currencyCode'}
                ],
                formatter: '.formatStockValue'
              }"/>
          </attributes>
        </ObjectListItem>
      </List>
    </Panel>
    <Panel
      id="productDetailPanel" 
      headerText="{i18n>panel4HeaderText}"
      class="sapUiResponsiveMargin"
      width="auto">
      <form:SimpleForm
        editable="true"
        layout="ColumnLayout">
        
        <Label text="{i18n>ProductID}"/>
        <Input value="{productModel>ProductID}"/>
        
        <Label text="{i18n>ProductName}"/>
        <Input value="{productModel>ProductName}"/>
        
        <Label text="{i18n>QuantityPerUnit}"/>
        <Input value="{productModel>QuantityPerUnit}"/>
        
        <Label text="{i18n>UnitPrice}"/>
        <Input value="{productModel>UnitPrice}"/>
        
        <Label text="{i18n>UnitsInStock}"/>
        <Input value="{productModel>UnitsInStock}"/>
        
        <Label text="{i18n>Discontinued}"/>
        <CheckBox selected="{productModel>Discontinued}"/>
        
      </form:SimpleForm>
    </Panel>
</mvc:View>